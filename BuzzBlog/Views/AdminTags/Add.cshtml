@model BuzzBlog.Models.ViewModels.AddTagRequest
@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="cointainer py-5">
    <form method="post"> 
        <div class="mb-3 px-4">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" placeholder="Enter your name" asp-for="Name" />
        </div>

        <div class="mb-3 px-4">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayName" placeholder="Enter display name" asp-for="DisplayName"/>
        </div>

        <div class="mb-3 px-4">
            <button type="submit" class="btn btn-light">Submit</button>
        </div>
    </form>

</div>
 
